<section class="hero">
    <div class="container mx-auto py-16 flex items-center justify-between">
        <div class="w-1/2 ml-8">
            <h6 class="text-lg"><em>Hungry?</em></h6>
            <h1 class="text-6xl font-bold">Don't Wait Order Now!!</h1>
            <button class="px-6 py-2 text-white font-bold mt-4 rounded-full btn-primary">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="/img/pizza.png" alt="">
        </div>
    </div>
</section>

<section class="container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8 ml-6">All Pizzas</h1>
    <div class="ml-6 grid grid-cols-4 gap-y-16 gap-x-12">

        <% pizzas.forEach(pizza => { %>
            <div class="w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%- pizza.image %> " alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%- pizza.name %></h2>
                    <span class="size py-1 px-4 uppercase rounded-full text-xs"><%- pizza.size %> </span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%- pizza.price %> </span>
                        <button data-pizza="<%= JSON.stringify(pizza) %> " class="add-to-cart rounded-full px-6 py-1 flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %> 
    </div>
</section>